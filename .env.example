# Mail System Configuration

# Domains that will accept emails (comma separated)
DOMAINS=yourdomain.com,mail.yourdomain.com

# Admin password for accessing admin panel
ADMIN_PASSWORD=your_secure_password_here

# How many days to keep emails before auto-deletion
DELETE_OLDER_THAN_DAYS=7

# Whether to discard emails for unknown domains
DISCARD_UNKNOWN=false

# Production settings
NODE_ENV=production
PORT=80

# Date format for display
DATEFORMAT=D.M.YYYY HH:mm
